{
  "name": "XPT",
  "description": "XRPL Portfolio Tracker Browser extension fetches information about your XRPL accounts",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "XPT"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background_worker.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "web_interaction_content_script.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "xpt192.png",
    "48": "xpt192.png",
    "128": "xpt192.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}